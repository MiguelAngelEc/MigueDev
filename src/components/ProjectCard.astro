---
export interface Props {
  image: string;
  name: string;
  description: string;
  urlGit: string;
  urlDemo: string;
  details?: string;
}
const { image, name, description, urlGit, urlDemo, details } = Astro.props;
---

<div class="bg-white rounded-xl shadow-md p-4 flex flex-col items-center gap-3 transition-transform hover:scale-105">
  <img src={image} alt={name} class="w-32 h-32 object-cover rounded-md mb-2" loading="lazy" />
  <h3 class="text-lg font-bold text-gray-900 text-center">{name}</h3>
  <button type="button" class="text-sm text-blue-600 focus:outline-none" onclick="this.nextElementSibling.classList.toggle('hidden')">Ver detalles</button>
  <div class="hidden w-full mt-2 text-left">
    <p class="text-sm text-gray-600">{description}</p>
    {details && <div class="mt-2 text-xs text-gray-500">{details}</div>}
  </div>
  <div class="flex gap-4 mt-2">
    <a href={urlGit} target="_blank" rel="noopener noreferrer" aria-label="Ver en GitHub" class="hover:text-black">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6"><path d="M12 0C5.37 0 0 5.373 0 12c0 5.303 3.438 9.8 8.205 11.387.6.113.82-.258.82-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.84 1.237 1.84 1.237 1.07 1.834 2.809 1.304 3.495.997.108-.775.418-1.305.762-1.605-2.665-.305-5.466-1.334-5.466-5.931 0-1.31.469-2.381 1.236-3.221-.124-.303-.535-1.523.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.553 3.297-1.23 3.297-1.23.653 1.653.242 2.873.119 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.804 5.624-5.475 5.921.43.371.823 1.102.823 2.222v3.293c0 .322.218.694.825.576C20.565 21.796 24 17.299 24 12c0-6.627-5.373-12-12-12z"/></svg>
    </a>
    <a href={urlDemo} target="_blank" rel="noopener noreferrer" aria-label="Ver demo del proyecto" class="hover:text-black">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6"><path d="M14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3z"/><path d="M5 5v14h14v-7h-2v5H7V7h5V5z"/></svg>
    </a>
  </div>
</div> 