---
import img from "../assets/dev.png";
import github from "../assets/github.svg";
import x from "../assets/x.svg";
import instagram from "../assets/instagram.svg";
---

<main class="flex flex-col w-full h-auto p-4">
  <section
    class="grid grid-cols-1 lg:grid-cols-2 gap-6 h-auto w-full text-center lg:text-right"
  >
    <!-- Contenedor de texto -->
    <div class="flex flex-col sm:justify-center">
      <h1
        class="w-full text-center lg:text-right text-3xl sm:text-4xl md:text-6xl lg:text-7xl xl:text-8xl custom:text-9xl font-bold text-black leading-tight"
      >
        <span class="char">MIGUE.</span><span
          class="text-transparent custom-stroke">dev</span
        >
      </h1>
      <h2
        class="text-center lg:text-right text-xl sm:text-2xl md:text-3xl lg:text-3xl font-semibold mt-4"
      >
        Coding with character.
      </h2>
      <p
        class="text-center lg:text-right text-base sm:text-sm md:text-sm lg:text-[15px]"
      >
        Self-taught developer focused on <span class="font-bold">frontend</span>
        magic,
        <span class="font-bold">backend</span> logic and bringing ideas to life.
      </p>
      <div
        class="flex justify-center lg:justify-end md:justify-center  gap-3 sm:gap-4 mt-4 sm:mt-6 lg:mt-6"
      >
        <a
          class="rotate inline-block will-change-transform"
          href="https://github.com/MiguelAngelEc"
        >
          <img
            class="w-8 h-8 sm:w-9 sm:h-9 lg:w-10 lg:h-10 hover:scale-110 transition-all duration-300 inline-block will-change-transform"
            src={github.src}
            alt=""
          />
        </a>
        <a
          class="rotate inline-block will-change-transform"
          href="https://x.com/MiguelSOLEY"
        >
          <img
            class="w-8 h-8 sm:w-9 sm:h-9 lg:w-10 lg:h-10 hover:scale-110 transition-all duration-300 inline-block will-change-transform"
            src={x.src}
            alt=""
          />
        </a>
        <a
          class="rotate inline-block will-change-transform"
          href="https://www.instagram.com/migueangel.dev/"
        >
          <img
            class="w-8 h-8 sm:w-9 sm:h-9 lg:w-10 lg:h-10 hover:scale-110 transition-all duration-300 inline-block will-change-transform"
            src={instagram.src}
            alt=""
          />
        </a>
      </div>
      <div
        class="flex justify-center lg:justify-end sm:justify-center gap-3 sm:gap-4 mt-4 sm:mt-6 lg:mt-6 curriculum"
      >
        <button
          class="bg-black text-white px-4 py-2 rounded-full hover:scale-110 transition-all duration-300 inline-block will-change-transform"
          >Download CV</button
        >
      </div>
    </div>

    <!-- Contenedor de imagen -->
    <div class="flex w-full h-full justify-center items-center dev-img">
      <img
        class="lg:w-[700px] md:w-[450px] sm:w-[350px]"
        src={img.src}
        alt="Dev-person"
      />
    </div>
  </section>
</main>

<script>
  document.addEventListener("DOMContentLoaded", async () => {
    if (typeof window === "undefined") return;

    try {
      const animationsModule = await import("../animations/mainAnimations.js");

      if (animationsModule && animationsModule.initMainAnimations) {
        setTimeout(() => {
          animationsModule.initMainAnimations();
        }, 100);
      }
    } catch (error) {
      console.error("Error loading GSAP animations:", error);
    }
  });
</script>
